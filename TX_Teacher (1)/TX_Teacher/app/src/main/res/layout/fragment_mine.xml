<?xml version="1.0" encoding="utf-8"?>
<!--下拉刷新-->
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mine_swf"
    tools:context=".Fragments.MineFragment">
    <!--滑动-->
    <ScrollView
       android:layout_height="match_parent"
        android:layout_width="match_parent"
        >
        <!--垂直布局-->
        <LinearLayout
          android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <!--头部View-->
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    >
                    <ImageView
                        android:id="@+id/my_picture_url_iv"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/head"
                        />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/my_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="测试001"
                        android:gravity="center_vertical"
                        android:padding="4dp"
                        android:background="#00406DFF"
                        android:textColor="#406dff"
                        android:textSize="20sp"
                        />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
            <!--个人相关-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#F7F7F7"
                android:paddingLeft="45dp"
                android:text="个人相关"
                android:textColor="#406dff"
                android:textSize="15sp" />
            <!--  修改密码-->
            <LinearLayout
                android:id="@+id/my_modifypwd_ll"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/suo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="修改密码"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/my_modifypwd_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="45dp"
                    android:gravity="right|center_vertical"
                    android:text=">"
                    android:textColor="#007DFF"
                    android:textSize="20sp" />
            </LinearLayout>
            <!--  修改头像-->
            <LinearLayout
                android:id="@+id/my_modifyhead_ll"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/tou1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="修改头像"
                    android:textColor="#000000"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/my_modifyhead_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="45dp"
                    android:gravity="right|center_vertical"
                    android:text=">"
                    android:textColor="#007DFF"
                    android:textSize="20sp" />
            </LinearLayout>
            <!--学生相关-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#F7F7F7"
                android:paddingLeft="45dp"
                android:text="通知相关"
                android:textColor="#406dff"
                android:textSize="15sp" />
            <!--消息中心-->
            <LinearLayout
                android:id="@+id/my_message_ll"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/message1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="消息中心"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </LinearLayout>
            <!--系统相关-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#F7F7F7"
                android:paddingLeft="45dp"
                android:text="系统相关"
                android:textColor="#406dff"
                android:textSize="15sp" />
            <!--  清理缓存-->
            <LinearLayout
                android:id="@+id/my_clean"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/lajitong" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="清理缓存"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </LinearLayout>
           <!--退出登录-->
            <LinearLayout
                android:id="@+id/my_exit_ll"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                android:background="@drawable/shape_rectangle">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="退出登陆"
                    android:textColor="#406dff"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
        </ScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>