<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background01"
    android:orientation="vertical"
    tools:context=".Fragments.WorkFragment">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        >
        <!--one-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/work_pinglun"
                android:layout_weight="1"
                >
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/zhouji"
                    android:id="@+id/b"
                    />
                <TextView
                    android:layout_below="@+id/b"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评论周记"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/work_push"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/push"
                    android:id="@+id/a"
                    />
                <TextView
                    android:layout_gravity="center"
                    android:layout_below="@+id/a"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推送消息"
                    />
            </LinearLayout>
        </LinearLayout>
        <View android:layout_marginTop="10dp" android:layout_height="1px" android:background="#000000" android:layout_width="fill_parent"></View>
        <!--two-->
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/work_FaQiDabian"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_gravity="center"

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/faqidabian"
                    />
                <TextView
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发起答辩"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/work_ChaKanDabian"
                android:orientation="vertical"
                >
            <ImageView
                android:layout_gravity="center"

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/pindabian"
                />
            <TextView
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看答辩"
                />
        </LinearLayout>
</LinearLayout>
        <!--three-->
        <View android:layout_marginTop="10dp" android:layout_height="1px" android:background="#000000" android:layout_width="fill_parent"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
            android:layout_width="0dp"
                android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/work_Map"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_gravity="center"

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ditu"
                />
            <TextView
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看地理分布图"
                />

        </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>