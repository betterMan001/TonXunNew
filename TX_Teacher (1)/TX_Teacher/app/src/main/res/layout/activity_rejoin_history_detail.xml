<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="tx.a316.com.tx_teacher.activites.RejoinHistoryDetailActivity">
    <!--自定义标题栏-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#3d644a"
        android:orientation="horizontal" >
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:id="@+id/rejoin_back_ll"
                android:background="@drawable/back"/>
        </LinearLayout>
        <TextView
            android:text="答辩详情"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <!--标题-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="标题"
        android:textSize="30sp"
        android:id="@+id/rejoinDatil_title"
        android:textColor="#05a3d7"
        android:gravity="center"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <!--为了美观外边用CardView包围-->
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            >
            <!--自定义的带分割线的TextView-->
            <tx.a316.com.tx_teacher.widget.LineDividerTextView
                android:layout_margin="5dp"
                android:id="@+id/rejoinDatil_tv"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="学生:\nsss"
                app:line_divider="@drawable/divider_gradient"
                app:line_divider_height="1dp"
                >
            </tx.a316.com.tx_teacher.widget.LineDividerTextView>
        </android.support.v7.widget.CardView>
    </ScrollView>

</LinearLayout>
